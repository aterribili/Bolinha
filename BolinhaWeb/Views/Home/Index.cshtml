
@{
    ViewBag.Title = "Index";
}

<header><h2>Relatorio de Metricas</h2></header>

<section>
    <p>
        O Bolinha é uma iniciativa <a href="https://github.com/aterribili/Bolinha">Open-Source</a> que tem o objetivo de te auxiliar com algumas métricas geradas para seu repositório git.
        Utilizamos API <a href="https://github.com/libgit2/libgit2sharp">LibGitSharp</a>.
    </p>
</section>

<section class="formulario">
    
    <form action="/">
        <p>
            Url Repositório <input name="url" type="text">
            <button name="baixar">Gerar</button>
        </p>
    </form>
</section>

<section class="relatorio">
    <table>
        <thead>
            <tr>
                <td>Nome</td>
                <td>Commits</td>
                <td>Alterado</td>
                <td>Bolinha</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var arquivo in ViewBag.Arquivos)
                {
                    <tr>
                        <td><a href="~/Home/Detail?nome=@arquivo.Nome&linhas=@arquivo.Linhas&alterado=@arquivo.Alterado&bolinha=@arquivo.Bolinha">@arquivo.Nome</a></td>
                        <td>@arquivo.Linhas</td>
                        <td>@arquivo.Alterado</td>
                        <td>@arquivo.Bolinha</td>
                    </tr>
                }
        </tbody>
</table>
</section>




